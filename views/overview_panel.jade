extends layout

block content
  a(href='/new-furniture') New Furniture
  ul.list
    for peace in furniture
      li
        p #{peace.name}
        a(href='/update-furniture/' + peace._id).update Update
        a(href='', fid=peace._id).delete-furn Delete

  a(href='/new-designer') New Designer
  ul.list
    for designer in designers
      li
        p #{designer.firsname} #{designer.lastname}
        a(href='/update-designer/' + designer._id).update Update
        a(href='', did=designer._id).delete-designer Delete
